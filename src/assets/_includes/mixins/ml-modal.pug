mixin ml-modal(id, titleClass, messageTitle)
	div.modal.safe-modal(id=id tabindex='-1' aria-labelledby=id + "Title" aria-modal='true' role='dialog')

		div.modal-dialog.modal-dialog-centered

			div.modal-content
				div.modal-header(class= titleClass)
					h5.text-center=messageTitle
					button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')

				div.modal-body
					if block
						block