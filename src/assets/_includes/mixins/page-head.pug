mixin page-head(title, subtitle, imgsrc, showImg)
	div.bg-red.relative
		div.hidden.absolute.inset-y-0.right-0(class="w-1/2 lg:block")
			img.hidden.object-cover.h-full.w-full(src=imgsrc class="lg:block")
			div.hidden.absolute.inset-y-0.left-0.bg-gradient-to-l.from-transparent.to-red(class="w-1/3 lg:block")

		div.container.text-center.text-white.py-12.grid.gap-8(class="lg:py-24 lg:grid-cols-2")
			div
				h1.text-4xl.mb-6= title
				p.text-lg.mb-0= subtitle

			if showImg == true
				img.rounded-xl(class="lg:hidden" src= imgsrc)